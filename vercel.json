{
  "buildCommand": "npm run vercel-build",
  "outputDirectory": ".",
  "functions": {
    "backend/index.js": {
      "runtime": "@vercel/node"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
